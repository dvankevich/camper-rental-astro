---
import Icon from "../Icon.astro";
const { features, details } = Astro.props;
---

<div class="features-inner-card">
  <div class="badges-grid">
    {
      features.map((f) => (
        <div class="badge">
          <Icon name={f.icon} size={20} />
          <span>{f.label}</span>
        </div>
      ))
    }
  </div>

  <div class="details-block">
    <h3>Vehicle details</h3>
    <ul class="details-list">
      {
        Object.entries(details).map(([key, value]) => (
          <li>
            <span>{key}</span> <span>{value}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  .features-inner-card {
    background-color: #f7f7f7;
    padding: 40px;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    height: 100%;
    flex-grow: 1;
  }
  .badges-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
  .badge {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 18px;
    background-color: #f2f4f7;
    border-radius: 100px;
    font-size: 16px;
    font-weight: 500;
  }
  .details-block {
    margin-top: auto;
    padding-top: 44px;
  }
  .details-block h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 24px;
    border-bottom: 1px solid rgba(16, 24, 40, 0.1);
    padding-bottom: 24px;
  }
  .details-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .details-list li {
    display: flex;
    justify-content: space-between;
    font-size: 18px;
    font-weight: 500;
  }
</style>
