---
import Icon from "./Icon.astro";
import FavoriteButton from "./FavoriteButton.jsx";

const { camper } = Astro.props;

const formattedPrice = `€${camper.price.toFixed(2)}`;

// Маппінг характеристик для бейджів
const features = [
  { label: `${camper.adults} adults`, icon: "Users" },
  { label: camper.transmission, icon: "Transmission", capitalize: true },
  { label: camper.engine, icon: "Engine", capitalize: true },
  { label: "Kitchen", icon: "Kitchen", show: camper.kitchen },
  { label: `${camper.beds} beds`, icon: "Bed" },
  { label: "AC", icon: "AC", show: camper.AC },
].filter((f) => f.show !== false);
---

<div class="card">
  <div class="image-wrapper">
    <img src={camper.gallery[0].thumb} alt={camper.name} />
  </div>

  <div class="content">
    <div class="header-row">
      <h2 class="title">{camper.name}</h2>
      <div class="price-container">
        <span class="price">{formattedPrice}</span>
        <FavoriteButton camper={camper} client:load />
      </div>
    </div>

    <div class="info-row">
      <span class="rating">
        <Icon name="StarFull" size={16} class="star-icon" />
        <span class="underline"
          >{camper.rating} ({camper.reviews.length} Reviews)</span
        >
      </span>
      <span class="location">
        <Icon name="Map" size={16} />
        {camper.location}
      </span>
    </div>

    <p class="description">{camper.description}</p>

    <ul class="features-list">
      {
        features.map((feat) => (
          <li class="feature-badge">
            <Icon name={feat.icon} size={20} />
            <span class={feat.capitalize ? "capitalize" : ""}>
              {feat.label}
            </span>
          </li>
        ))
      }
    </ul>

    <a href={`/catalog/${camper.id}`} class="btn-primary">Show more</a>
  </div>
</div>

<style>
  .card {
    display: flex;
    gap: 24px;
    padding: 24px;
    border: 1px solid var(--gray-light);
    border-radius: 20px;
    background: var(--white);
  }

  .image-wrapper {
    width: 290px;
    height: 310px;
    flex-shrink: 0;
    border-radius: 10px;
    overflow: hidden;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content {
    flex-grow: 1;
  }

  .header-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
  }

  .title {
    font-size: 24px;
    font-weight: 600;
  }

  .price-container {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 24px;
    font-weight: 600;
  }

  .info-row {
    display: flex;
    gap: 16px;
    margin-bottom: 24px;
  }

  .rating,
  .location {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .star-icon {
    color: var(--rating);
  }
  .underline {
    text-decoration: underline;
  }

  .description {
    color: var(--text);
    margin-bottom: 24px;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .features-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 24px;
  }

  .feature-badge {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 18px;
    background: var(--badges);
    border-radius: 100px;
    font-weight: 500;
  }

  .capitalize {
    text-transform: capitalize;
  }

  .btn-primary {
    display: inline-block;
    background: var(--button);
    color: white;
    padding: 16px 40px;
    border-radius: 200px;
    font-weight: 500;
    transition: background 0.3s;
  }

  .btn-primary:hover {
    background: var(--button-hover);
  }
</style>
