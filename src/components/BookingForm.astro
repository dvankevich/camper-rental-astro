<div class="booking-card">
  <h3>Book your campervan now</h3>
  <p class="subtitle">Stay connected! We are always ready to help you.</p>

  <form class="booking-form" id="booking-form">
    <div class="input-group">
      <input type="text" name="name" placeholder="Name*" required />
    </div>

    <div class="input-group">
      <input type="email" name="email" placeholder="Email*" required />
    </div>

    <div class="input-group date-wrapper">
      <input
        type="text"
        id="booking-date"
        name="date"
        placeholder="Booking date*"
        readonly
        required
      />
    </div>

    <div class="input-group">
      <textarea name="comment" placeholder="Comment" rows="4"></textarea>
    </div>

    <button type="submit" class="send-btn">Send</button>
  </form>
</div>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
/>

<script>
  import flatpickr from "flatpickr";

  const initCalendar = () => {
    flatpickr("#booking-date", {
      dateFormat: "d.m.Y",
      minDate: "today",
      locale: { firstDayOfWeek: 1 },
      // Кастомні стрілки як на макеті
      nextArrow:
        '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#101828" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>',
      prevArrow:
        '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#101828" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>',
    });
  };

  initCalendar();
  document.body.addEventListener("htmx:afterSwap", initCalendar);
</script>

<style is:global>
  /* Стилізація Flatpickr згідно скриншота 1 */
  .flatpickr-calendar {
    width: 325px !important;
    border: 1px solid #dadde1;
    border-radius: 12px;
    box-shadow: none;
    padding: 16px;
  }
  .flatpickr-day.selected {
    background: #475467 !important; /* Темний колір вибору */
    border-color: #475467 !important;
    color: #fff !important;
  }
  .flatpickr-day.today {
    border-color: transparent;
  }
  .flatpickr-current-month {
    font-weight: 600;
    font-size: 16px;
  }
  span.flatpickr-weekday {
    color: #475467;
    font-weight: 500;
  }
</style>

<style>
  .booking-card {
    border: 1px solid rgba(16, 24, 40, 0.2);
    border-radius: 12px;
    padding: 44px;
    background-color: #fff;
  }

  h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .subtitle {
    color: #475467;
    font-size: 16px;
    margin-bottom: 24px;
  }

  .booking-form {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .input-group input,
  .input-group textarea {
    width: 100%;
    padding: 18px;
    background-color: #f7f7f7;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    outline: none;
    color: #101828;
  }

  .input-group input::placeholder,
  .input-group textarea::placeholder {
    color: rgba(16, 24, 40, 0.6);
  }

  .send-btn {
    align-self: flex-start; /* Кнопка зліва як на макеті */
    background-color: #e44848;
    color: white;
    padding: 16px 60px;
    border: none;
    border-radius: 200px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    margin-top: 10px;
    transition: background 0.2s ease;
  }

  .send-btn:hover {
    background-color: #d84343;
  }
</style>
