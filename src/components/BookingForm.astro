---
/* BookingForm.astro */
---

<div class="booking-card">
  <h3>Book your campervan now</h3>
  <p class="subtitle">Stay connected! We are always ready to help you.</p>

  <form class="booking-form" id="booking-form">
    <div class="input-group">
      <input type="text" name="name" placeholder="Name*" required />
    </div>

    <div class="input-group">
      <input type="email" name="email" placeholder="Email*" required />
    </div>

    <div class="input-group date-wrapper">
      <input
        type="text"
        id="booking-date"
        name="date"
        placeholder="Booking date*"
        readonly
        required
      />
    </div>

    <div class="input-group">
      <textarea name="comment" placeholder="Comment" rows="4"></textarea>
    </div>

    <button type="submit" class="send-btn">Send</button>
  </form>
</div>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
/>

<script>
  import flatpickr from "flatpickr";

  const initCalendar = () => {
    flatpickr("#booking-date", {
      dateFormat: "d.m.Y",
      minDate: "today",
      // ВИПРАВЛЕНО: Робимо вибір місяця статичним текстом (без випадаючого списку)
      monthSelectorType: "static",
      locale: { firstDayOfWeek: 1 },
      nextArrow:
        '<svg width="24" height="24" viewBox="0 0 24 24" fill="none"><path d="M9 18l6-6-6-6" stroke="#101828" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>',
      prevArrow:
        '<svg width="24" height="24" viewBox="0 0 24 24" fill="none"><path d="M15 18l-6-6 6-6" stroke="#101828" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>',
    });
  };

  initCalendar();
  document.body.addEventListener("htmx:afterSwap", initCalendar);
</script>

<style is:global>
  /* КОНТЕЙНЕР КАЛЕНДАРЯ */
  .flatpickr-calendar {
    width: 327px !important;
    background: #fff;
    border: 1px solid rgba(16, 24, 40, 0.2);
    border-radius: 12px;
    box-shadow: none;
    padding: 16px;
    margin-top: 12px;
  }

  /* Стрілка-покажчик вгорі */
  .flatpickr-calendar.arrowTop:before,
  .flatpickr-calendar.arrowTop:after {
    border-bottom-color: rgba(16, 24, 40, 0.2) !important;
  }

  /* ШАПКА: Прибираємо стилі стандартних селектів */
  .flatpickr-current-month {
    font-size: 16px !important;
    font-weight: 600 !important;
    color: #101828 !important;
    padding: 0 !important;
  }

  .flatpickr-current-month .flatpickr-monthDropdown-months,
  .flatpickr-monthDropdown-month {
    font-weight: 600 !important;
    background: transparent !important;
    pointer-events: none; /* Вимикаємо клік на назву місяця */
  }

  .numInputWrapper span {
    display: none;
  } /* Ховаємо стрілки року */

  /* ДНІ ТИЖНЯ */
  .flatpickr-weekdays {
    height: 40px !important;
    border-bottom: 1px solid rgba(16, 24, 40, 0.1);
    margin-bottom: 8px;
  }

  span.flatpickr-weekday {
    font-size: 12px !important;
    font-weight: 600 !important;
    color: #475467 !important;
    text-transform: uppercase;
  }

  /* СІТКА ДНІВ */
  .flatpickr-day {
    font-size: 14px !important;
    border-radius: 50% !important;
  }

  /* ВИБРАНИЙ ДЕНЬ */
  .flatpickr-day.selected {
    background: #475467 !important;
    border-color: #475467 !important;
    color: #fff !important;
  }
</style>

<style>
  .booking-card {
    border: 1px solid rgba(16, 24, 40, 0.2);
    border-radius: 12px;
    padding: 44px;
    background-color: #fff;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .subtitle {
    color: #475467;
    font-size: 16px;
    margin-bottom: 24px;
  }

  .booking-form {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .input-group input,
  .input-group textarea {
    width: 100%;
    padding: 18px;
    background-color: #f7f7f7;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    outline: none;
    color: #101828;
  }

  .input-group textarea {
    resize: none;
  }

  .input-group input::placeholder,
  .input-group textarea::placeholder {
    color: rgba(16, 24, 40, 0.6);
  }

  /* ВИПРАВЛЕНО: Кнопка по центру */
  .send-btn {
    align-self: center;
    background-color: #e44848;
    color: white;
    padding: 16px 60px;
    border: none;
    border-radius: 200px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    margin-top: 10px;
    transition: background 0.2s ease;
  }

  .send-btn:hover {
    background-color: #d84343;
  }
</style>
