<div class="booking-card">
  <h3>Book your campervan now</h3>
  <p class="subtitle">Stay connected! We are always ready to help you.</p>

  <form class="booking-form" id="booking-form">
    <div class="input-group">
      <input type="text" name="name" placeholder="Name*" required />
    </div>

    <div class="input-group">
      <input type="email" name="email" placeholder="Email*" required />
    </div>

    <div class="input-group date-wrapper">
      <input
        type="text"
        id="booking-date"
        name="date"
        placeholder="Booking date*"
        readonly
        required
      />
    </div>

    <div class="input-group">
      <textarea name="comment" placeholder="Comment" rows="4"></textarea>
    </div>

    <button type="submit" class="send-btn">Send</button>
  </form>
</div>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
/>

<script>
  import flatpickr from "flatpickr";

  const initCalendar = () => {
    flatpickr("#booking-date", {
      dateFormat: "d.m.Y",
      minDate: "today",
      locale: { firstDayOfWeek: 1 },
      // Кастомні стрілки як на макеті
      nextArrow:
        '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#101828" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>',
      prevArrow:
        '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#101828" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>',
    });
  };

  initCalendar();
  document.body.addEventListener("htmx:afterSwap", initCalendar);
</script>

<style is:global>
  /* КОНТЕЙНЕР КАЛЕНДАРЯ */
  .flatpickr-calendar {
    width: 327px !important;
    background: #fff;
    border: 1px solid rgba(16, 24, 40, 0.2);
    border-radius: 12px;
    box-shadow: none;
    padding: 16px;
    margin-top: 12px;
  }

  /* Стрілка вгорі (хвостик) */
  .flatpickr-calendar.arrowTop:before,
  .flatpickr-calendar.arrowTop:after {
    border-bottom-color: rgba(16, 24, 40, 0.2) !important;
  }

  /* ШАПКА (Місяць та Рік) */
  .flatpickr-months .flatpickr-month {
    color: #101828 !important;
    fill: #101828 !important;
    height: 48px;
  }

  .flatpickr-current-month {
    font-size: 16px !important;
    font-weight: 600 !important;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 !important;
  }

  .flatpickr-current-month .flatpickr-monthDropdown-months {
    font-weight: 600 !important;
    color: #101828 !important;
  }

  /* Стрілки навігації */
  .flatpickr-months .flatpickr-prev-month,
  .flatpickr-months .flatpickr-next-month {
    padding: 10px !important;
    top: 10px !important;
  }

  .flatpickr-months .flatpickr-prev-month svg,
  .flatpickr-months .flatpickr-next-month svg {
    width: 24px !important;
    height: 24px !important;
    fill: #101828 !important;
  }

  /* ДНІ ТИЖНЯ (MON, TUE...) */
  .flatpickr-weekdays {
    height: 40px !important;
    border-bottom: 1px solid rgba(16, 24, 40, 0.1);
    margin-bottom: 8px;
  }

  span.flatpickr-weekday {
    font-size: 12px !important;
    font-weight: 600 !important;
    color: #475467 !important;
    text-transform: uppercase;
  }

  /* СІТКА ДНІВ */
  .flatpickr-days {
    width: 295px !important;
  }

  .flatpickr-day {
    font-size: 14px !important;
    font-weight: 400 !important;
    color: #101828 !important;
    border-radius: 50% !important;
    height: 38px !important;
    line-height: 38px !important;
    margin: 2px !important;
  }

  /* Вибраний день (Темне коло) */
  .flatpickr-day.selected,
  .flatpickr-day.selected:hover {
    background: #475467 !important; /* Колір зі скриншота */
    border-color: #475467 !important;
    color: #fff !important;
  }

  /* Дні іншого місяця */
  .flatpickr-day.prevMonthDay,
  .flatpickr-day.nextMonthDay {
    color: rgba(16, 24, 40, 0.4) !important;
  }

  .flatpickr-day:hover {
    background: #f2f4f7 !important;
  }
</style>

<style>
  .booking-card {
    border: 1px solid rgba(16, 24, 40, 0.2);
    border-radius: 12px;
    padding: 44px;
    background-color: #fff;
  }

  h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .subtitle {
    color: #475467;
    font-size: 16px;
    margin-bottom: 24px;
  }

  .booking-form {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .input-group input,
  .input-group textarea {
    width: 100%;
    padding: 18px;
    background-color: #f7f7f7;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    outline: none;
    color: #101828;
  }

  .input-group input::placeholder,
  .input-group textarea::placeholder {
    color: rgba(16, 24, 40, 0.6);
  }

  .send-btn {
    align-self: flex-start; /* Кнопка зліва як на макеті */
    background-color: #e44848;
    color: white;
    padding: 16px 60px;
    border: none;
    border-radius: 200px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    margin-top: 10px;
    transition: background 0.2s ease;
  }

  .send-btn:hover {
    background-color: #d84343;
  }
</style>
