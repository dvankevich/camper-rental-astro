---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
---

<Layout title="Campers of your dreams">
  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-title">Campers of your dreams</h1>
      <p class="hero-subtitle">
        You can find everything you want in our catalog
      </p>
      <a href="/catalog" class="hero-button">View Now</a>
    </div>
  </section>
</Layout>

<style>
  .hero {
    /* Шлях до картинки в public/images/ */
    background-image:
      linear-gradient(rgba(16, 24, 40, 0.4), rgba(16, 24, 40, 0.4)),
      image-set(
        url("/images/Hero.webp") 1x,
        url("/images/Hero@2x.webp") 2x,
        url("/images/Hero.jpg") 1x
      );
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;

    /* Висота на весь екран мінус висота хедера (приблизно) */
    height: calc(100vh - 88px);
    width: 100%;
    display: flex;
    align-items: center;
    padding-left: 64px;
  }

  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    .hero {
      background-image:
        linear-gradient(rgba(16, 24, 40, 0.4), rgba(16, 24, 40, 0.4)),
        url("/images/Hero@2x.webp");
    }
  }

  .hero-content {
    max-width: 600px;
    color: var(--white); /* Білий текст */
  }

  .hero-title {
    font-size: 48px;
    font-weight: 600;
    line-height: 1.16; /* 32px / 48px roughly */
    margin-bottom: 16px;
  }

  .hero-subtitle {
    font-size: 24px;
    font-weight: 600;
    line-height: 1.33;
    margin-bottom: 40px;
  }

  .hero-button {
    display: inline-block;
    background-color: var(--button);
    color: #fff;
    padding: 16px 40px; /* Великі відступи як в макеті */
    font-weight: 500;
    font-size: 16px;
    line-height: 1.5;
    border-radius: 200px; /* Округла кнопка */
    transition: background-color 0.3s;
  }

  .hero-button:hover {
    background-color: var(--button-hover);
  }

  @media (max-width: 768px) {
    .hero {
      padding-left: 20px;
      justify-content: center;
      text-align: center;
    }
  }
</style>
